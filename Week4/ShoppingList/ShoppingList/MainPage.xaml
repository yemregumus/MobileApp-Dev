<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.MainPage"
             Title="Shopping List">

    <StackLayout Spacing="20" Padding="16">
        <Label Text="Enter Item" FontSize="21" HorizontalTextAlignment="Center"/>
        <Entry x:Name="itemEntry" Placeholder="Enter item"/>
        <Button Text="Add Item" Clicked="OnAddItemButtonClicked"/>
        <Button Text="View Summary" Clicked="OnViewSummaryButtonClicked"/>
    </StackLayout>

</ContentPage>
