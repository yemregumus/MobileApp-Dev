<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizApp.QuestionPage2"
             Title="Question 2">
    <StackLayout Padding="20">
        <Label Text="What is 2 + 2?" FontSize="24" />
        <StackLayout x:Name="Answers">
            <RadioButton x:Name="rb3" Content="3" GroupName="Answers" />
            <RadioButton x:Name="rb4" Content="4" GroupName="Answers" />
            <RadioButton x:Name="rb5" Content="5" GroupName="Answers" />
            <RadioButton x:Name="rb6" Content="6" GroupName="Answers" />
        </StackLayout>
        <Button Text="Next" Clicked="OnNextClicked" />
    </StackLayout>
</ContentPage>
