<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemperatureConverter.MainPage"
             Title="Celsius to Fahrenheit">

    <StackLayout Spacing="20" Padding="16">
        <Label Text="Enter Temperature in Celsius" FontSize="21" HorizontalTextAlignment="Center"/>
        <Entry x:Name="celsiusEntry" Placeholder="Enter Celsius" Keyboard="Numeric"/>
        <Button Text="Convert to Fahrenheit" Clicked="OnConvertButtonClicked"/>
    </StackLayout>

</ContentPage>
