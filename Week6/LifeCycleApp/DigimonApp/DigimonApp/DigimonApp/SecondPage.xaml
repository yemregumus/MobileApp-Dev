<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigimonApp.SecondPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">

    <StackLayout>
        <Label Text="List Of Recipes" FontSize="Title" HorizontalTextAlignment="Center"/>
        <Entry x:Name="txtSearch" Placeholder="Enter a keyword"/>
        <Button Text="Search" Clicked="Button_Clicked"/>
        <Label Text="Results" FontSize="Subtitle" HorizontalTextAlignment="Center"/>
        <ListView x:Name="lvlRecipes"/>
    </StackLayout>
</ContentPage>