<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week2XamarinApp.MainPage">


    <StackLayout Orientation="Vertical" AnchorX="0.5" AnchorY="0.5">
        <Label HorizontalTextAlignment="Center" Text="Welcome to my app!" FontSize="24"/>
        <Image x:Name="myImage" />

        <Label HorizontalTextAlignment="Center" Text="Let's Demo Input Event!" FontSize="24"/>

        <Label HorizontalTextAlignment="Left" Text="Enter Name" FontSize="24"/>
        <Entry x:Name="txtName" Placeholder="Enter name"/>
        <Label HorizontalTextAlignment="Left" Text="Enter Age" FontSize="24"/>
        <Entry x:Name="txtAge" Placeholder="Enter age" Keyboard="Numeric"/>
        <Button Text="Calculate" Clicked="Button_Clicked"/>
        <Label x:Name="lblResult" Text="" FontSize="20"/>

    </StackLayout>

</ContentPage>